{
  "references": [
    {
      "path": "../../packages/typescript-config"
    },
    {
      "path": "../../packages/eslint-config"
    },
    {
      "path": "../../packages/api"
    }
  ],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "vitest/globals"
    ],
    "noEmit": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "*.mjs",
    "*.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "extends": "@repo/typescript-config/tsconfig.react.json"
}