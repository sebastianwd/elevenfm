{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "skipLibCheck": true,
    "checkJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "alwaysStrict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2022",
      "ESNext"
    ],
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "next-env.d.ts",
    "tailwind.config.ts",
    "postcss.config.js",
    "src",
    "next.config.mjs",
    "codegen.yml",
    "codegen.ts",
    "eslint.config.mjs",
    "apollo.config.js",
    "prettier.config.mjs",
    ".next/types/**/*.ts",
    "drizzle.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}